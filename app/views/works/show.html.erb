<section>
  <h2><%= @work.title %></h2>
  <p>Created By: <%= @work.creator %></p>
  <p>Published: <%= @work.publication_year %></p>
  <p></p>

  <section>
    <%= link_to "Back to media ranks" %>
    <%= link_to "Edit", edit_work_path %>
    <%= link_to "Upvote" %>
    <%= link_to "Delete", work_path(@work), method: :delete, data: {confirm: "Are you sure?~~"} %>

  </section>
</section>

<section>
  <h3><%= "#{@work.votes.count} Votes for this #{@work.category.capitalize}" %></h3>
  <table>
    <thead>
    <tr>
      <th>User</th>
      <th>Date</th>
    </tr>
    </thead>

    <tbody>
    <% @work.users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user_path(user) %></td>
        <td><%= user.created_at.strftime('%b %d, %Y') %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>

